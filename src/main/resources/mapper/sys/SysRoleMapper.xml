<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cars.plat.sys.dao.SysRoleDao">
    <!-- 查询所有角色 -->
    <select id="listRole" resultType="SysRole">
        select * from DEMO_SYS_ROLE order by role_code
    </select>

    <!-- 增加角色 -->
    <insert id="addRole" parameterType="SysRole">
      insert into DEMO_SYS_ROLE (ROLE_CODE,ROLE_NAME,DESCRIPTION,CREATE_USER)
        VALUES (#{roleCode},#{roleName},#{description},#{createUser})
    </insert>

    <!-- 更新角色 -->
    <update id="updateRole" parameterType="SysRole">
      update DEMO_SYS_ROLE set
        ROLE_NAME=#{roleName},DESCRIPTION=#{description},LAST_MODIFIED_USER=#{lastModifiedUser},LAST_MODIFIED_DATE=#{lastModifiedDate}
      where ROLE_CODE=#{roleCode}
    </update>

    <!-- 删除角色 -->
    <delete id="deleteRole" parameterType="String">
      delete from DEMO_SYS_ROLE where ROLE_CODE=#{roleCode}
    </delete>

    <!-- 获取角色信息 -->
    <select id="getRoleByCode" parameterType="String" resultType="SysRole">
        select * from DEMO_SYS_ROLE where ROLE_CODE=#{roleCode}
    </select>
</mapper>